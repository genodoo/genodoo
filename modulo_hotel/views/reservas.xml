<odoo>
    <data>
        <template id="reservastemplate">
            <xpath expr="//div[@id='wrap']" position="replace">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty">
                        <!-- A partir de aquí empieza tu código -->
                        <!-- fields:
name:
room_id:
customer_id:
date_in:
date_out:
-->
                        <div class="col-md-6 mt32 mb32" style="color: white;background:rgba(0,0,0,0.8)">
                            <form action="/reservas/submit" style="margin:10px" method="POST">
                                <div class="form-group">
                                    <label for="room_id">Habitación</label>
                                    <input class="form-control" id="room_id" name="room_id"/>
                                </div>
                                <div class="form-group">
                                    <label for="customer_id">Nombre</label>
                                    <input class="form-control" id="customer_id" name="customer_id"/>
                                </div>
                                <div class="date_in">
                                    <label for="date_in">Dia de Llegada</label>
                                    <input type="date" class="form-control" id="day_in" name="day_in"/>
                                </div>
                                <div class="form-group">
                                    <label for="date_out">Dia de Salida</label>
                                    <input type="date" class="form-control" id="day_out" name="day_out"/>
                                </div>
                                <t t-set="token" t-att-value="request.csrf_token()">
                                    <input type="hidden" name="csrf_token" t-value="token"/>
                                    <input type="hidden" name="room_id" t-value="token"/>
                                </t>
                            </form>
                        </div>
                        <!-- Aquí termina tu código -->
                    </div>
                </t>
            </xpath>
        </template>
        <record id="reservasid" model="website.page">
            <field name="name">Reservas</field>
            <field name="website_published">True</field>
            <field name="url">/reservas</field>
            <field name="view_id" ref="reservastemplate"/>
        </record>
    </data>
</odoo>
