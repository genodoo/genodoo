<odoo>
	<data>
		<template id="home">
			<xpath expr="//div[@id='wrap']" position="replace">
				<t t-call="website.layout">
					<div id="wrap" class="oe_structure oe_empty" style="font-family: Garamond !important;">
						<section class="s_big_picture bg-gray-lighter mb0">
							<div class="container">
								<h2 class="text-center" style="text-align: center;">Restaurante GFork<br/></h2>
								<div class="row">
									<div class="col-md-12">
										<img class="img img-responsive" src="/modulo_restaurante/static/src/img/gfork.jpg" style="margin: 0 auto;" alt="Odoo CMS - una imagen grande" data-original-title="" title=""/>
									</div>
									<div class="col-md-2 col-md-offset-5 mt32 mb32">
										<a href="/reservas" class="pull-right mt8 btn btn-danger btn-lg" data-original-title="" title="">Reservar</a>
									</div>
								</div>
							</div>
						</section>
						<section class="s_three_columns">
							<div class="container">
								<div class="row">
									<div class="col-md-4 mt32 mb48">
										<img class="img img-responsive" src="/modulo_restaurante/static/src/img/tradicional.jpeg" alt="Odoo - Sample 1 for three columns" data-original-title="" title=""/>
										<h4 class="mt16" style="text-align: center;">Cocina tradicional a precios asequibles.<br/></h4>
										<p style="text-align: justify;">Platos típicos con el toque personal de nuestro chef.<br/></p>
									</div>
									<div class="col-md-4 mb32 mt32">
										<img class="img img-responsive" src="/modulo_restaurante/static/src/img/gala.jpeg" alt="Odoo - Sample 3 for three columns" data-original-title="" title=""/>
										<h4 class="mt16" style="text-align: center;">Cenas de gala. </h4>
										<p style="text-align: center;">Pregunte por nuestros presupuestos para </p>
										<p style="text-align: center;">su cena de empresa, celebración, etc.<br/></p>
									</div>
									<div class="col-md-4 mt32 mb48">
										<img class="img img-responsive" src="/modulo_restaurante/static/src/img/internacional.jpeg" alt="Odoo - Sample 2 for three columns" data-original-title="" title=""/>
										<h4 class="mt16" style="text-align: center;">Platos internacionales por cocineros de todo el mundo.<br/></h4>
										<p style="text-align: center;">Nuestro equipo cuenta con cocineros de 10 países distintos, todos entusiasmados por divulgar la gastronomía de su patria.<br/></p>
									</div>
								</div>
							</div>
						</section>
						<section class="jumbotron s_button bg-white" style="">
							<div class="container">
								<div class="row"> </div>
							</div>
						</section>
						<section class="parallax s_parallax_slider oe_custom_bg oe_img_bg" style="background-image: none;" data-scroll-background-ratio="1.6">
							<span class="s_parallax_bg oe_custom_bg" style="background-image: url(&quot;http://localhost:8069/web/image/website.s_parallax_slider_default_image&quot;); top: -100.96px; bottom: -100.96px; transform: translateY(97px);"/>
							<div>
								<div>
									<div class="oe_structure"/>
								</div>
							</div>
						</section>
					</div>
				</t>
			</xpath>
		</template>

		<record id="homeid" model="website.page">
			<field name="name">Restaurante-GFork</field>
			<field name="website_published">True</field>
			<field name="url">/home</field>
			<field name="view_id" ref="home"/>
		</record>
	</data>
</odoo>
