<odoo>
    <data>
        <template id="tienda">
            <xpath expr="//div[@id='wrap']" position="replace">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty">
                    <!-- A partir de aquí empieza tu código -->
			<section class="s_title bg-alpha" style="">
			  <div class="container">
			    <div class="row">
			      <div class="col-md-12">
				<h1 class="text-center">GenOdoo Shop<br/></h1>
				<h3 class="text-center text-muted">Shop&amp;amp;Wear<br/></h3>
			      </div>
			    </div>
			  </div>
			</section>
		    <!-- Aquí termina tu código -->
                    </div>
                </t>
            </xpath>
        </template>
        <record id="tienda" model="website.page">
            <field name="name">Tienda</field>
            <field name="website_published">True</field>
            <field name="url">/tienda</field>
            <field name="view_id" ref="tienda"/>
        </record>
    </data>
</odoo>
