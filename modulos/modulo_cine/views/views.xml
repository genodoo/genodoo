<odoo>
  <data>2

    <!-- Tree view for cine.pelicula -->
    <record id="pelicula_view_tree" model="ir.ui.view">
      <field name="name">cine.pelicula.view.tree</field>
      <field name="model">cine.pelicula</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="totalViews"/>
          <field name="duration"/>
          <field name="link"/>          
        </tree>
      </field>
    </record>

    <!-- Form view for cine.pelicula model -->    
    <record id="pelicula_view_form" model="ir.ui.view">
      <field name="name">cine.pelicula.view.form</field>
      <field name="model">cine.pelicula</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="name"/>
              <field name="totalViews"/>
              <field name="duration"/>
              <field name="link"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- cinema.pelicula action window -->
    <record id="cine_pelicula_action" model="ir.actions.act_window">
      <field name="name">cine.pelicula.action</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">cine.pelicula</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="view_id" ref="pelicula_view_tree"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Haz click aquí para añadir una nueva película a la cartelera
        </p>
      </field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
    <menuitem id="cinema_main" name="Cinema"/>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="cinema_sidebar" name="Cine" parent="cinema_main"/>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="cinema_peliculas" name="Cartelera" parent="cinema_sidebar" action="cine_pelicula_action"/>

  </data>
</odoo>